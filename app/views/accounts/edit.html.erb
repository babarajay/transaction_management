<body class="login-inverse">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <%= form_for(@account, html: {class:"form-signin, method: :put"}) do |f| %>
          <div class="login-panel panel panel-default top30">
            <div class="panel-heading">
              <h3 class="panel-title">Edit</h3>
            </div>
            <div class="panel-body">
              <form class="form-signin" action="#" accept-charset="UTF-8" method="post"><input name="utf8" type="hidden" value="âœ“">
               <input type="hidden" name="authenticity_token" value="#">
                <fieldset>
                   <div class="form-group">
                      <i>(Add amount to deposite to account)</i><br />
                      <%= f.number_field :balance, step: "0.1", class:"form-control", placeholder: "Amount", required: :required %>
                   </div>
                   <%= f.submit "Update", class:"btn btn-primary btn-block" %><br>
                </fieldset>
              </form> 
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</body>